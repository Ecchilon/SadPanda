<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="spbStyle">@style/PandaBar</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorAccent">@color/dark_gray</item>
        <item name="vpiLinePageIndicatorStyle">@style/AppTheme.LineIndicator</item>
    </style>

    <style name="AppTheme.LineIndicator" parent="Widget">
        <item name="lineWidth">@dimen/default_line_indicator_line_width</item>
        <item name="gapWidth">@dimen/default_line_indicator_gap_width</item>
        <item name="strokeWidth">@dimen/default_line_indicator_stroke_width</item>
        <item name="selectedColor">@color/default_line_indicator_selected_color</item>
        <item name="unselectedColor">@color/default_line_indicator_unselected_color</item>
        <item name="centered">@bool/default_line_indicator_centered</item>
    </style>

    <style name="AppTheme.PagerSlidingTabStrip">
        <item name="pstsIndicatorColor">@color/white</item>
        <item name="pstsDividerColor">@color/dark_gray</item>
        <item name="pstsIndicatorHeight">@dimen/small_margin</item>
        <item name="pstsTabPaddingLeftRight">@dimen/small_margin</item>
        <item name="pstsUnderlineHeight">0dp</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:icon">@drawable/ic_action_icon</item>
    </style>

    <style name="AppTheme.CustomActionBarTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="SwipeBackTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="body" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="subtitle" parent="body">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PandaBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">4dp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">1</item>
        <item name="spb_color">@color/spb_default_color</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">false</item>
        <item name="spb_reversed">false</item>
        <item name="spb_progressiveStart_activated">true</item>
    </style>

</resources>
