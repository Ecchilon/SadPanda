<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActionBarTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay" tools:ignore="NewApi">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/black_overlay</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SwipeBackTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
